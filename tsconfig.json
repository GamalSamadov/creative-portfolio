{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"outDir": "./dist/",
		"jsx": "react-jsx",
		"moduleResolution": "node",
		"baseUrl": "./",
		"paths": {
			"@/*": ["./src/*"],
			"@assets/": ["./public/assets/*"]
		},
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"noImplicitAny": true
	},
	"ts-node": {
		"compilerOptions": {
			"module": "CommonJs"
		}
	}
}
